<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.derisse.hollyn.fragments.Activities.Dialogs">

    <Button
        android:onClick="simpleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog with text"
        android:id="@+id/dialogText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="simpleDialogList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog with list"
        android:id="@+id/dialogList"
        android:layout_below="@+id/dialogText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dialogText"
        android:layout_alignEnd="@+id/dialogText" />

    <Button
        android:onClick="simpleDialogMultichoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Dialog with multichoice list"
        android:id="@+id/dialogMultichoice"
        android:layout_below="@+id/dialogList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="customDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Dialog"
        android:id="@+id/customDialog"
        android:layout_below="@+id/dialogMultichoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="customDialogAsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Dialog as a Fragment"
        android:id="@+id/customDialogAsFragment"
        android:layout_below="@+id/customDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customDialogAsFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/group"></LinearLayout>
</RelativeLayout>
